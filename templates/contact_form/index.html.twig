
{{ form_start(contactForm, {'action': path('contact_form')}) }}
<div class="modal fade" id="contactForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h2> <i class="fontAw fas fa-envelope-open-text"></i> {{ 'homePage.generalOptions.contactUs'|trans }} </h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(contactForm.name) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(contactForm.email) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(contactForm.message) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitButton" class="btn btn-secondary">{{ 'formContact.send'|trans }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(contactForm) }}
